{
  "name": "Pattern: Cron Schedule Examples",
  "nodes": [
    {
      "parameters": {
        "rule": {
          "interval": [
            {
              "field": "cronExpression",
              "expression": "0 * * * *"
            }
          ]
        }
      },
      "name": "Hourly (on the hour)",
      "type": "n8n-nodes-base.scheduleTrigger",
      "position": [220, 100],
      "typeVersion": 1,
      "notes": "Runs at minute 0 of every hour"
    },
    {
      "parameters": {
        "rule": {
          "interval": [
            {
              "field": "cronExpression",
              "expression": "0 9 * * 1-5"
            }
          ]
        }
      },
      "name": "Weekdays 9am",
      "type": "n8n-nodes-base.scheduleTrigger",
      "position": [220, 200],
      "typeVersion": 1,
      "notes": "Runs at 9:00 AM Monday through Friday"
    },
    {
      "parameters": {
        "rule": {
          "interval": [
            {
              "field": "cronExpression",
              "expression": "0 0 * * *"
            }
          ]
        }
      },
      "name": "Daily at Midnight",
      "type": "n8n-nodes-base.scheduleTrigger",
      "position": [220, 300],
      "typeVersion": 1,
      "notes": "Runs at 00:00 every day"
    },
    {
      "parameters": {
        "rule": {
          "interval": [
            {
              "field": "cronExpression",
              "expression": "*/15 * * * *"
            }
          ]
        }
      },
      "name": "Every 15 Minutes",
      "type": "n8n-nodes-base.scheduleTrigger",
      "position": [220, 400],
      "typeVersion": 1,
      "notes": "Runs every 15 minutes"
    },
    {
      "parameters": {
        "rule": {
          "interval": [
            {
              "field": "cronExpression",
              "expression": "0 0 1 * *"
            }
          ]
        }
      },
      "name": "First of Month",
      "type": "n8n-nodes-base.scheduleTrigger",
      "position": [220, 500],
      "typeVersion": 1,
      "notes": "Runs at midnight on the 1st of each month"
    },
    {
      "parameters": {
        "rule": {
          "interval": [
            {
              "field": "cronExpression",
              "expression": "0 6,18 * * *"
            }
          ]
        }
      },
      "name": "6am and 6pm",
      "type": "n8n-nodes-base.scheduleTrigger",
      "position": [220, 600],
      "typeVersion": 1,
      "notes": "Runs at 6:00 AM and 6:00 PM daily"
    },
    {
      "parameters": {
        "values": {
          "string": [
            {
              "name": "trigger_time",
              "value": "={{ $now.toISO() }}"
            },
            {
              "name": "schedule_name",
              "value": "={{ $node.name }}"
            }
          ]
        }
      },
      "name": "Process Scheduled Task",
      "type": "n8n-nodes-base.set",
      "position": [520, 300],
      "typeVersion": 2
    }
  ],
  "connections": {
    "Hourly (on the hour)": {
